<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/batch"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:util="http://www.springframework.org/schema/util"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/batch
                           http://www.springframework.org/schema/batch/spring-batch.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util.xsd">

    <!-- JOB -->
    <job id="importOrganizationXmlJob" parent="abstractParentJob">
        <step id="importOrganizationXmlStep" parent="abstractStepImportFileJob"
              next="organizationXmlFileActionDeciderStep">
            <tasklet>
                <chunk reader="organizationXmlItemReader" processor="organizationItemProcessor"
                       writer="organizationItemWriter" commit-interval="10000" skip-limit="2">
                    <skippable-exception-classes>
                        <include class="org.springframework.oxm.UnmarshallingFailureException"/>
                        <exclude class="org.springframework.batch.item.NonTransientResourceException"/>
                    </skippable-exception-classes>
                </chunk>
            </tasklet>
        </step>
        <decision id="organizationXmlFileActionDeciderStep" decider="fileActionDecider">
            <next on="COMPLETED" to="organizationDeleteXmlFileStep"/>
            <next on="COMPLETED_WITH_ERRORS" to="organizationMoveErrorXmlFileStep"/>
        </decision>
        <step id="organizationDeleteXmlFileStep" parent="abstractStepDeleteFile"/>
        <step id="organizationMoveErrorXmlFileStep" parent="abstractMoveErrorFileStep"/>
    </job>

    <!-- XML file reader-->
    <beans:bean id="organizationXmlItemReader" class="org.springframework.batch.item.xml.StaxEventItemReader"
                scope="step">
        <beans:property name="fragmentRootElementName" value="organization"/>
        <beans:property name="resource" value="file:#{jobParameters[pathToFile]}"/>
        <beans:property name="unmarshaller" ref="organizationMarshaller"/>
    </beans:bean>

    <beans:bean id="organizationMarshaller"
                class="org.springframework.oxm.xstream.XStreamMarshaller">
        <beans:property name="aliases">
            <util:map id="aliases">
                <beans:entry key="organization"
                             value="fr.osb.smartf.agent.worker.service.dto.OrganizationDTO"/>
            </util:map>
        </beans:property>
    </beans:bean>

</beans:beans>